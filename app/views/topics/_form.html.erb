
  
<%= form_for(@topic) do |f| %>
<%= f.error_messages! %>
  <div class="field">
    <%= f.label :タイトル %><br>
    <%= f.text_field :title , class: "form-control"%>
  </div>
  <div class="field">
    <%= f.label :トピック内容 %><br>
    <%= f.text_area :content , class: "form-control"%>
  </div>
  <div class="actions">
    <%= f.submit "編集する", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

