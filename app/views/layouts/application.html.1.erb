</head>
<body class="contentCol">

  <header class="header">
    <ul>

      <% if user_signed_in? %>
          <script>
            var pusher = new Pusher('<%= Pusher.key %>');
            var channel = pusher.subscribe('notifications' + <%= current_user.id.to_s %>);
                channel.bind('message', function(data) {
                $('#unreadcount').html(data.unread_count);
                });
          </script>
      <!--トッピック-->
      <li class= "_59tf_01"><%= link_to "", topics_path %></li>
      <!--ユーザー一覧-->
      <li class= "_59tf_02"><%= link_to '', users_path %></li>
      <li  class= "_59tf_03"><%= link_to "", conversations_path %></li>
      <li><%= link_to 'マイページ', edit_user_registration_path %></li>
      <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
      <li class="dropdown notifications-dropdown"><%= render 'layouts/dropdown/notifications' %></li>
      <li class="dropdown ">
      <a href="#" class="dropdown-toggle _59tf" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"  class="header_text "> </a>
      <ul class="dropdown-menu">
      <li><%= link_to "トピック", topics_path,class: "menu" %></li>
      <li ><%= link_to "メッセージ", conversations_path,class: "menu" %></li>
      <li ><%= link_to 'ユーザー一覧', users_path if user_signed_in? %></li>
      </ul>
      </li>
      
      <% else %>
      <li><%= link_to 'ログイン', new_user_session_path %></li>
      <li><%= link_to 'サインアップ', new_user_registration_path %></li>
      
       <%- if controller_name != 'sessions' %>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name) , :html => {:class => "form-inline nav_login_form"} ) do |f| %>
                  <div class="form-group">
                    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
                  </div>
                  <div class="form-group">
                    <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
                  </div>
                <% end %>
              <% end %>
      <% end %>
      
      </ul>
      </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
      </nav>
    </ul>
  </header>

<%= yield %>



</body>
</html>